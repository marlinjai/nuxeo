<?xml version="1.0"?>
<component name="org.nuxeo.mail.badSender" version="1.0">
  <require>org.nuxeo.mail.MailServiceComponent</require>
  <extension target="org.nuxeo.mail.MailServiceComponent" point="senders">
    <sender name="default" class="org.nuxeo.mail.SMTPMailSender">
      <property name="mail.smtp.host">badHostName</property>
      <property name="mail.smtp.port">2525</property>
      <property name="mail.smtp.connectiontimeout">1000</property>
      <property name="mail.smtp.timeout">1000</property>
    </sender>
  </extension>
</component>
