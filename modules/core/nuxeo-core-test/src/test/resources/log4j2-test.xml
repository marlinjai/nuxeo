<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <File name="FULL_GC" fileName="${sys:custom.environment.log.dir:-target}/blob-gc.log" append="false">
      <ThresholdFilter level="trace" onMatch="ACCEPT" />
      <PatternLayout pattern="%d{DEFAULT} Full GC %m%n" />
    </File>
  </Appenders>
  <Loggers>
    <Logger name="org.nuxeo.ecm.core.blob.stream.StreamOrphanBlobGC" level="error" />
    <!-- Needed by TestTrashBackwardMechanism -->
    <logger name="org.nuxeo.ecm.core.lifecycle.event.BulkLifeCycleChangeListener" level="debug" />
    <Logger name="org.nuxeo.ecm.core.action.GarbageCollectOrphanBlobsAction" level="trace" >
      <AppenderRef ref="FULL_GC" />
    </Logger>
  </Loggers>
</Configuration>
